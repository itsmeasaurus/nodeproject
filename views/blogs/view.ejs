<!doctype html>
<html lang="en">
<%- include('./../partials/header.ejs') %>
<body>
    <header>
        <h1><%= title %></h1>
        <%- include('./../partials/nav.ejs') %>
    </header>

    <section>
        <h2>There are <%- blogs.length %> Blogs</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>

            <div class="blog-card">
                <a href="/blogs/<%- blog._id %>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.description %></p>
                </a>
            </div>

            <% }) %>
        <% }else{ %>
            <p>There is no blog</p>
        <% } %>
    </section>

</body>
</html>